{
  "name": "aspire-secure-trade",
  "version": "1.0.0",
  "description": "Full forex trading web application with user frontend, admin dashboard, and backend API",
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend && npm run install:dashboard",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install", 
    "install:dashboard": "cd dashboard && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:dashboard\"",
    "build:frontend": "cd frontend && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "build:all": "npm run build:frontend && npm run build:dashboard",
    "start:prod": "cd backend && npm start",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "backup": "chmod +x scripts/backup.sh && ./scripts/backup.sh",
    "monitor": "chmod +x scripts/monitor.sh && ./scripts/monitor.sh",
    "logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "restart": "docker-compose -f docker-compose.prod.yml restart",
    "stop": "docker-compose -f docker-compose.prod.yml down",
    "clean": "docker-compose -f docker-compose.prod.yml down -v --remove-orphans",
    "test:auth": "node scripts/test-auth.js",
    "start:dev": "node scripts/start-dev.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "forex",
    "trading",
    "react",
    "nodejs",
    "mongodb",
    "admin-dashboard"
  ],
  "author": "Aspire Secure Trade",
  "license": "MIT"
}